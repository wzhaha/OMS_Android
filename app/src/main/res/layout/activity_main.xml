<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.oms_android.MainActivity">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="245dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/test" />

    <EditText
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="                  用户名"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="150dp" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/id"
        android:layout_below="@+id/id"
        android:ems="10"
        android:hint="                    密码"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="83dp"
        android:layout_marginRight="83dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/background_light"
        android:text="新用户"
        android:textColor="@android:color/holo_blue_light"
        android:textColorLink="@android:color/holo_blue_bright" />

    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_below="@+id/login_spinner"
        android:layout_marginLeft="83dp"
        android:layout_marginRight="83dp"
        android:layout_marginTop="17dp"
        android:background="@android:color/holo_blue_light"
        android:text="登录"
        android:textColor="@android:color/background_light" />

    <Spinner
        android:id="@+id/login_spinner"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pass"
        android:layout_below="@+id/pass"
        android:layout_centerInParent="false"
        android:layout_marginTop="12dp"
        android:dropDownWidth="match_parent" />


</RelativeLayout>
