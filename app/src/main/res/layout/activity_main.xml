<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.oms_android.MainActivity">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="245dp"
        app:srcCompat="@mipmap/test" />

    <EditText
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="270dp"
        android:layout_alignParentEnd="true"

        android:layout_marginEnd="64dp"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="150dp" />

    <EditText
        android:id="@+id/pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/id"
        android:layout_below="@+id/id"
        android:ems="10"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/login_spinner"
        android:layout_below="@+id/login_spinner"
        android:text="新用户" />

    <Button
        android:id="@+id/login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBaseline="@+id/sign"
        android:layout_alignBottom="@+id/sign"
        android:layout_alignEnd="@+id/pass"
        android:text="登录"
        android:textColor="@android:color/background_dark" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/id"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@+id/id"
        android:text="账号：" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_alignTop="@+id/pass"
        android:layout_marginTop="11dp"
        android:text="密码：" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/login_spinner"
        android:layout_alignStart="@+id/textView2"
        android:text="角色：" />

    <Spinner
        android:id="@+id/login_spinner"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/pass"
        android:layout_below="@+id/pass"
        android:layout_centerInParent="false"
        android:layout_marginTop="12dp"
        android:dropDownWidth="match_parent" />


</RelativeLayout>
